@model Zebra.Models.CommentModelsVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = Model.Music} )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Comment.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment.ID_User)
        </th>
    </tr>

@if (Model.Comments.Count() != 0)
{
    foreach (var item in Model.Comments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_User)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
}

</table>
